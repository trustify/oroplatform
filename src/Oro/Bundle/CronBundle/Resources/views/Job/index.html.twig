{% extends 'OroUIBundle:actions:index.html.twig' %}

{% set gridName  = 'jobs-grid' %}
{% set pageTitle = 'oro.cron.header.jobs'|trans %}

{% block content_datagrid %}
    {% set options = {
        view: 'orocron/js/app/views/job-queue-view',
        name: 'job-queue',
        intervalUpdate: 30000
    } %}
    <div class="container-fluid"
         data-page-component-module="oroui/js/app/components/view-component"
         data-page-component-options="{{ options|json_encode }}">
        <div class="row-fluid">
            <div class="span10">
                {{ parent() }}
            </div>
            <div class="span2">
                {% use 'OroCronBundle:Job:sidebar.html.twig' %}
                {{ block('sidebar') }}
            </div>
        </div>
    </div>
{% endblock %}
