{% extends 'OroUserBundle:Mail:layout.html.twig' %}

{% block content %}
    <h1>Hello, {{ user|oro_format_name }}!</h1>
    <p>A new user has been created for you
        at <a href="{{ oro_config_value('oro_ui.application_url') }}">{{ oro_config_value('oro_ui.application_url') }}</a>
    </p>
    <p>Please use the following credentials to log in:</p>
    <p></p>
    <p><strong>Login:</strong> {{ user.username }}</p>
    <p><strong>Password:</strong> {{ password }}</p>
    <p></p>
    <p><strong>We strongly recommend that you change your password after logging in.</strong></p>
{% endblock %}
